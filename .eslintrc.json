{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "settings": {
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          "\\?",
          "^node:"
        ]
      }
    ],
    "import/order": [
      "error",
      {
        "alphabetize": { "order": "asc" },
        "groups": [
          ["builtin", "external"],
          ["index", "internal", "parent", "sibling", "unknown"],
          ["object"]
        ]
      }
    ],
    "import/resolver": {
      "typescript": {
        "project": ["./tsconfig.json"]
      }
    }
  }
}
